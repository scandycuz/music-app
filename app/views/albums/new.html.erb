<h1>Add a <%= @band.name %> album</h1>

<form id="add_band" action="<%= band_albums_path %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="album_name">Album Name</label>
  <input type="text" name="album[name]" value=""><br><br>

  <label for="album_band_id">Band Name</label>
  <select name="album[band_id]" autocomplete="off">
    <% @bands.each do |band| %>
      <option value=<%= band.id %> <%= band == @band ? "selected=selected" : "" %>><%= band.name %></option>
    <% end %>
  </select><br><br>

  <input autocomplete="off" checked="checked" type="radio" id="album_type" name="album[album_type]" value="live">
  <label for="studio">Studio</label>
  <input autocomplete="off" type="radio" id="album_type" name="album[album_type]" value="studio">
  <label for="live" checked="checked">Live</label><br><br>

  <button>Add Album</button><br><br>

  <% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>

</form>
